@import 'style/weui.wxss';
page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 20px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd2 {
  padding-bottom: 30px;
}

.page__bd3 {
  padding-bottom: 20px;
}

.page__bd4 {
  padding-bottom: 10px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.textGrayLeft {
  text-align: left;
  color: #999;
}

.copyright {
  justify-content: center;
  align-items: center;
  width: 28rpx;
  height: 28rpx;
  margin: 1rpx;
}

sup {
  font-size: 10px;
  vertical-align: text-top;
}

sub {
  font-size: 10px;
  vertical-align: text-bottom;
}
.title {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  background-color: orange;
  justify-content: center;
  font-size: 20px;
}

.button {
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 5px;
}